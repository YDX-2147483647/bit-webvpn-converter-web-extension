{
    "name": "BIT URL 转换器",
    "description": "转换 BIT 内外 URL。",
    "version": "0.3.0",
    "manifest_version": 2,
    "browser_specific_settings": {
        "gecko": {
            "id": "bit-webvpn-converter-web-extension@YDX-2147483647"
        }
    },
    "permissions": [
        "menus",
        "tabs",
        "storage"
    ],
    "optional_permissions": [
        "clipboardWrite",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "page": "background/background.html",
        "persistent": false
    },
    "options_ui": {
        "page": "/options/options.html",
        "browser_style": true
    },
    "browser_action": {
        "default_popup": "/popup/popup.html",
        "default_icon": {
            "16": "/images/icon16.png",
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "homepage_url": "https://github.com/YDX-2147483647/bit-webvpn-converter-web-extension"
}